<%= form_with scope: @user, url: users_path do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

     <div>
        <%= f.label :password %>
        <%= f.text_field :password %>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation %>
    </div>

    <div>
        <%= f.submit %>
    </div>

<% end %>