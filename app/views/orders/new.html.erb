<h2><%= @order.stock.name %> (<%= @order.stock.symbol %>)</h2>
<p>Units owned: <%= current_user.current_unit_owned(@stock.symbol) %></p>
<p>Latest price: $ <%= @order.unit_price %></p>

<h2>Buy Stock</h2>
<%= form_with(model: @order, url: stock_orders_path(@stock), method: :post) do |f| %>
  <div>
    <%= f.label :amount %>
    <%= f.number_field :order_amount, step: 'any' %>
    <%= f.hidden_field :order_action, value: "buy" %>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>
<%end %>
<br>
<h2>Sell Stock</h2>
<%= form_with(model: @order, url: stock_orders_path(@stock), method: :post) do |f| %>
  <div>
    <%= f.label :amount %>
    <%= f.number_field :order_amount, step: 'any' %>
    <%= f.hidden_field :order_action, value: "sell" %>
  </div>
  <br>
   <div>
    <%= f.submit %>
  </div>
<% end %>
<br>
<%= link_to "Back", root_path%>